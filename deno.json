{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.unstable"],
    "strict": true
  },
  "fmt": {
    "options": {
      "singleQuote": true,
      "lineWidth": 80,
      "semiColons": true,
      "useTabs": false,
      "indentWidth": 2,
      "proseWrap": "always"
    }
  },
  "imports": {
    "oak/": "https://deno.land/x/oak@v12.6.1/",
    "djwt/": "https://deno.land/x/djwt@v3.0.1/",
    "bcrypt/": "https://deno.land/x/bcrypt@v0.4.1/",
    "log/": "https://deno.land/std@0.215.0/log/",
    "cors/": "https://deno.land/x/cors@v1.2.2/",
    "superoak/": "https://deno.land/x/superoak@4.7.0/",
    "testing/": "https://deno.land/std@0.215.0/testing/",
    "expect/": "https://deno.land/x/expect@v0.4.0/",
    "yup": "https://cdn.skypack.dev/yup@v1.3.3",
    "denon/": "https://deno.land/x/denon@2.5.0/"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --watch app.ts",
    "test": "deno test --allow-net --allow-read --allow-env"
  }
}